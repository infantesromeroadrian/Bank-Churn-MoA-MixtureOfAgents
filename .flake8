[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv
ignore =
    # E203: whitespace before ':' (black formatter conflict)
    E203,
    # W503: line break before binary operator (black formatter conflict)
    W503
per-file-ignores =
    # imported but unused in __init__.py
    __init__.py: F401